<p id="notice"><%= notice %></p>


  <div class="heading"><%= @post.title %></div>
  <%= @post.content %>
  

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
<div class="post_box">
  <div class="comment_color"><%= comment.text %></div>
  <p><%= time_ago_in_words comment.created_at %></p>
  <%= link_to 'Delete', [comment.post, comment], :class => 'btn', :method => :delete, :confirm => "Are you sure?", :id => "comment_btn" %>
</div>  
<% end %>
<div class="form-actions">
	<%= form_for [@post, @post.comments.build] do |f| %>
      <%= f.text_area :text, :size => '40*10' %>
  
      <%= f.submit "Post comment", :class => 'btn btn-large btn-primary' %>
    <% end %>
</div>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>|
<%= link_to 'Delete', @post, :method => :delete, :confirm => "Are you sure?" %>
